{
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ],
    "plugins": [
      [
        "@spockjs/babel-plugin-spock",
        {
          "presets": [
            "@spockjs/preset-runner-jest",
            "@spockjs/preset-sinon-mocks"
          ]
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "jest.js"
  }
}
