{
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ],
    "plugins": [
      [
        "@spockjs/babel-plugin-spock",
        {
          "presets": [
            "@spockjs/preset-runner-jest",
            "@spockjs/preset-jest-mocks"
          ]
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "jest.js",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+packages.+src.+\\.ts$": "ts-jest"
    }
  }
}
