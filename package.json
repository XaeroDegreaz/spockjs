{
  "private": true,
  "name": "@spockjs/spockjs",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "functional-tests",
    "integration-tests"
  ],
  "scripts": {
    "clean": "rimraf coverage packages/*/dist",
    "prefix": "prettier --write \"**/*.{js,json,md}\"",
    "fix": "tslint --project . --fix",
    "prelint": "prettier -l \"**/*.{js,json,md}\"",
    "lint": "tslint --project .",
    "typecheck": "tsc",
    "test-once": "ts-node --transpileOnly --project tsconfig.json node_modules/jest-cli/bin/jest.js --coverage --no-cache",
    "test-only": "yarn run test-once --watch",
    "test": "yarn run test-only --projects jest.config.js jest-tslint.config.js",
    "prebuild": "lerna exec --scope @spockjs/babel-plugin-spock --scope @spockjs/preset-* --include-filtered-dependencies -- tsc --project tsconfig.d.json",
    "build": "lerna exec --scope @spockjs/babel-plugin-spock --scope @spockjs/preset-* --include-filtered-dependencies -- babel src -d dist --config-file ../../babel.config.js --extensions .ts --ignore .*\\/__tests__\\/.* --ignore .*\\/__mocks__\\/.*",
    "all": "run-p lint typecheck test-once build"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-typescript": "^7.0.0-beta.54",
    "@spockjs/babel-plugin-spock": "^1.0.0-beta.1",
    "@spockjs/preset-runner-jest": "^1.0.0-beta.1",
    "@types/babel-core": "^6.25.3",
    "@types/babel-generator": "^6.25.2",
    "@types/babel-template": "^6.25.0",
    "@types/babel-traverse": "^6.25.2",
    "@types/babel-types": "^7.0.0",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.0.3",
    "@types/power-assert": "^1.5.0",
    "@types/pretty-format": "^20.0.0",
    "@types/sinon": "^5.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "jest": "^23.1.0",
    "jest-circus": "^23.4.1",
    "jest-runner-tslint": "^1.0.4",
    "lerna": "^3.0.0-beta.19",
    "npm-run-all": "^4.0.2",
    "power-assert": "^1.4.4",
    "prettier": "^1.3.1",
    "pretty-format": "^23.0.0",
    "rimraf": "^2.6.1",
    "sinon": "^6.1.3",
    "ts-node": "^6.0.2",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.1"
  }
}
